{
  "name": "react-network-notifier",
  "version": "2.0.0",
  "description": "A fun and witty React component that displays humorous messages and images when the internet connection is lost, keeping your users entertained while they wait for the connection to return.",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/J3rry320/react-network-notifier"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "react",
    "next",
    "network",
    "internet",
    "offline",
    "connection",
    "notification",
    "notifier",
    "humor",
    "fun",
    "witty",
    "images",
    "messages",
    "SSR",
    "SEO",
    "offline-ux",
    "UI",
    "toast",
    "banner",
    "ux",
    "component"
  ],
  "author": {
    "name": "Code Media Labs",
    "email": "rutuparna.satpathy01@gmail.com",
    "url": "https://codemedialabs.in"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/J3rry320/react-network-notifier/issues"
  },
  "homepage": "https://github.com/J3rry320/react-network-notifier#readme",
  "peerDependencies": {
    "react": ">=18 || ^19",
    "react-dom": ">=18 || ^19"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/react": "^18.0.33",
    "tsup": "^8.3.5",
    "typescript": "^5.0.3"
  }
}